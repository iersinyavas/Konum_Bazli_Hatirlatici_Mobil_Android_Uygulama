<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

   
    <Button
        android:id="@+id/alarmi_kapat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Alarm覺 Kapat" />

    <Button
        android:id="@+id/mesaji_sil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/alarmi_kapat"
        android:text="Mesaj覺 Sil" />

    <TextView
        android:id="@+id/mesaji_goster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/mesaji_sil"
        android:hint="Hat覺rlatma Mesaj覺"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
